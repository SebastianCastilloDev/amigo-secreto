generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Participante del amigo secreto
model Participante {
  id     Int     @id @default(autoincrement())
  nombre String
  token  String? @unique

  // Relaciones
  regalaA   Asignacion? @relation("QuienRegala")
  recibiDe  Asignacion? @relation("QuienRecibe")
}

// Resultado del sorteo: qui√©n le regala a qui√©n
model Asignacion {
  id            Int          @id @default(autoincrement())
  
  quienRegalaId Int          @unique
  quienRegala   Participante @relation("QuienRegala", fields: [quienRegalaId], references: [id])
  
  quienRecibeId Int          @unique
  quienRecibe   Participante @relation("QuienRecibe", fields: [quienRecibeId], references: [id])
}

// Registro de intentos de acceso no autorizado üö®
model Incidente {
  id              Int      @id @default(autoincrement())
  fecha           DateTime @default(now())
  
  // Datos capturados
  ip              String?
  ubicacion       String?
  latitud         Float?
  longitud        Float?
  plataforma      String?
  navegador       String?
  pantalla        String?
  zonaHoraria     String?
  bateria         String?
  conexion        String?
  idioma          String?
  foto            String?  @db.Text
  
  // Contrase√±as intentadas
  passwords       String[] 
  intentos        Int      @default(0)
}
